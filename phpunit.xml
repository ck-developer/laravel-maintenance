<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="false"
        backupStaticAttributes="false"
        bootstrap="./vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="false"
        stopOnFailure="true"
        syntaxCheck="false">
    <testsuites>
        <testsuite name="Maintenance Test Suite">
            <directory suffix="MaintenanceTest.php">./tests/</directory>
        </testsuite>
        <testsuite name="Command Test Suite">
            <directory suffix="Test.php">./tests/Console/Commands</directory>
        </testsuite>
    </testsuites>
</phpunit>
